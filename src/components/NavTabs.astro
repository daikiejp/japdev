---
const currentPath = Astro.url.pathname;

const tabs = [
  {
    href: '/',
    label: '記事',
    icon: 'M4 6h16v12a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6z M8 10h8M8 14h5'
  },
  {
    href: '/versions',
    label: '最新バージョン',
    icon: 'M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4'
  },
  {
    href: '/devsheet',
    label: 'チートシート',
    icon: 'M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253'
  },
  {
    href: '/resources',
    label: 'リソース',
    icon: 'M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z'
  },
];
---
<!-- ナブタブ -->
<div class="mb-8 overflow-x-auto">
  <div class="bg-white rounded-2xl p-2 shadow-sm border border-gray-200 inline-flex gap-2 min-w-max">
    {tabs.map((tab) => (
      <a 
        href={tab.href} 
        class={`tab-btn flex items-center gap-2 px-6 py-3 rounded-xl font-medium transition-all ${currentPath === tab.href ? 'active' : ''}`}
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={tab.icon} />
        </svg>
        {tab.label}
      </a>
    ))}
  </div>
</div>

<style>
  .tab-btn {
    text-decoration: none;
    color: #4b5563;
  }
  
  .tab-btn:hover {
    background-color: #f9fafb;
  }
  
  .tab-btn.active {
    background: linear-gradient(to right, #10b981, #14b8a6);
    color: white;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }
</style>
